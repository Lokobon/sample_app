
<% provide(:title, "Обновить профиль пользователя") %>
<% provide(:button_text, 'Сохранить изменения') %>
<h1>Обновить профиль</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%=provide(:button_text) %>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>

          <%= f.label :name, "Имя" %>
          <%= f.text_field :name, class: 'form-control' %>

          <%= f.label :email, "Почта" %>
          <%= f.email_field :email, class: 'form-control' %>

          <%= f.label :password, "Пароль" %>
          <%= f.password_field :password, class: 'form-control' %>

          <%= f.label :password_confirmation, "Подтверждение пароля" %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>

          <%= f.submit "Сохранить изменения", class: "btn btn-primary" %>
          </div>
          </div>

        <% end %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank">Change</a>
    </div>
  </div>
</div>